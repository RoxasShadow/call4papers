<h1>Edit profile and bio</h1>

<div class="profile">
  <%= simple_form_for @user, :url => profile_path do |f| %>
    <%= f.error_notification %>

    <div class="inputs">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :bio, :hint => "Tell us everything we need to know about you to accept your proposal. Nothing more, nothing less. You're encouraged to use markdown here." %>
    </div>

    <div class="actions">
      <%= f.button :submit, class: 'btn btn-info' %>
    </div>
  <% end %>
</div>
