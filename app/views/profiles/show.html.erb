<h1>My profile</h1>

<div class="profile">
  <table class="table">
    <tr>
      <td>Name</td>
      <td>Email</td>
      <td>GitHub</td>
      <td>Twitter</td>
    </tr>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @user.email %></td>
      <td><%= @user.github_handle %></td>
      <td><%= @user.twitter_handle %></td>
    </tr>
  </table>

</div>
<div class="bio">
  <h2>Bio</h2>

  <% if @user.bio.blank? %>
    Tell us more about yourself!
  <% else %>
    <%= markdown(@user.bio) %>
  <% end %>
</div>

<%= link_to "Edit profile and bio", edit_profile_path, class: 'btn btn-success' %>
