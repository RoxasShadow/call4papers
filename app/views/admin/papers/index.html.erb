<h1>All papers</h1>

<div class="papers">
  <% if @papers.empty? %>
    No submissions yet.
  <% else %>
    <table class="table">
      <tr>
        <th>Track</th>
        <th>Time Slot</th>
        <th>ID</th>
        <th>Title</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>

      <% @papers.each do |paper| %>
        <tr class="<%= 'selected' if paper.selected? %>">
          <td class="track"><%= paper.track %></td>
          <td class="time-slot"><%= paper.time_slot %></td>
          <td class="id"><%= paper.id[0..5] %></td>
          <td class="title"><%= link_to truncate(paper.title, length: 60), paper %></td>
          <td><%= paper.created_at.strftime('%b %d, %Y') %></td>
          <td><%= paper.updated_at.strftime('%b %d, %Y') if paper.updated? %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>

<%= link_to "Users", admin_users_path, class: 'btn btn-success' %>
<%= link_to "Papers", admin_papers_path, class: 'btn btn-success' %>
