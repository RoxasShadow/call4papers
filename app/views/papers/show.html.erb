<h1><%= @paper.title %></h1>

<div class="papers">
  <%= markdown @paper.private_description %>

  <% if @paper.public_description.present? %>
    <hr>
    <%= markdown @paper.public_description %>
  <% end %>
</div>

<%= link_to_if current_user, 'Edit', edit_paper_path(@paper), class: 'btn btn-success' %>
