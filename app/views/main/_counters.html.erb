<div class="counters">
  <span>
    <h1 class="muted"><%= @proposal_counts.size %></h1>
    <small>open calls have received proposals</small>
  </span>
  <% @proposal_counts.each do |call, count| %>
  <span>
    <h1 class="muted"><%= count %></h1>
    <small>proposals<br/><%= call.title %></small>
  </span>
  <% end %>
  <span>
    <h1 class="muted"><%= @user_count %></h1>
    <small>users registered</small>
  </span>
</div>
