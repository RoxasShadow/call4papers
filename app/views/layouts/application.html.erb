<!DOCTYPE html>
<html>
  <head>
    <title>Call for Papers | eurucamp 2013</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700|Open+Sans:400,700' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container container-narrow">
      <div class="masthead">
        <%= link_to root_path, class: 'root' do %>
          <%= image_tag('logo_small.png') %>
        <% end %>
        <%= render "main/nav" %>
      </div>
      <hr>
      <%= render"main/alerts" %>
      <%= yield %>
      <%= render "main/footer" %>
    </div>
    <%= javascript_include_tag "http://api.filepicker.io/v0/filepicker.js" %>
    <%= javascript_include_tag "markdown-editor" %>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-24474861-2']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </body>
</html>
